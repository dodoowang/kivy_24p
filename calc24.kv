#:import division __future__.division
<CalcButton@Button>:
	on_press: app.root.update_nums(self)
	background_color: [0.6, 0.6, 0.6, 1]
	color: [0.2, 0.8, 1, 1]
	font_size: self.height/2

<InfoLabel@Label>:
	font_size: min(self.height/2, self.width/10)

<Calc24>:
	orientation: "vertical"
	canvas:
		Color:
			rgba: 93./255, 64./255, 55./255, 1
		Rectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		orientation: "horizontal"
		size_hint: (1, .2)
		canvas:
			Color: 
				rgba: 117./255, 117./255, 117./255, 1
			Rectangle:
				pos: self.pos
				size: self.size
		Label:
			text: "24 points"
			font_size: self.height/2
		Button:
			canvas:
				Color:
					rgba: 117./255, 117./255, 117./255, 1
				Rectangle:
					pos: self.pos
					size: self.size
				Color:
					rgba: 1, 1, 1, 1
				Line:
					points: (self.x + self.width * .25, self.y + self.height * .25, self.x + self.width * .75, self.y + self.height * .75)
					width: 2 
				Line:
					points: (self.x + self.width * .25, self.y + self.height * .75, self.x + self.width * .75, self.y + self.height * .25)
					width: 2 
			size_hint: (self.parent.height / self.parent.width, 1)
			on_press: app.stop()
	BoxLayout:
		orientation: "horizontal"
		InfoLabel:
			text: "Input Number:"
		InfoLabel:
			id: id_4nums
			text: " ".join(map(str, root.nums))
	BoxLayout:
		orientation: "horizontal"
		InfoLabel:
			text: "Solution:"
		InfoLabel:
			id: id_ans
			text: ""
	GridLayout:
		cols: 3
		rows: 4
		spacing: [8, 8]
		CalcButton:
			text: "1"
		CalcButton:
			text: "2"
		CalcButton:
			text: "3"
		CalcButton:
			text: "4"
		CalcButton:
			text: "5"
		CalcButton:
			text: "6"
		CalcButton:
			text: "7"
		CalcButton:
			text: "8"
		CalcButton:
			text: "9"
		Button:
			text: "CLR"
			on_press: root.nums = []
			on_press: id_ans.text = ""
		Button:
			text: "NEXT"
			on_press: root.get_next_solution()
		Button:
			text: "RANDOM"
			on_press: root.generate_4_random_nums()
